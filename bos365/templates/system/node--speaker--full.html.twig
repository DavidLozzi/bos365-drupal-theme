<div class="speaker-details full-width">
    <div class="col-md-12"><h2>{{ node.label }}</h2></div>
    <div class="col-md-12"><div class="image">{{ content.field_photo }}</div></div>
    <div class="col-md-12 socio-icons">
        <div style="display: table;margin: 0 auto;">
            {% if content.field_linkedin_url.0 != "" %}
            <div class="icon-div"><a href="{{ content.field_linkedin_url.0 }}" target="_blank"><i class="fa fa-linkedin"></i></a></div>
            {% endif %}
            {% if content.field_twitter_.0 != "" %}
            <div class="icon-div"><a href="http://twitter.com/{{ content.field_twitter_.0 }}" target="_blank"><i class="fa fa-twitter"></i></a></div>
            {% endif %}
            {% if content.field_website.0 != "" %}
            <div class="icon-div"><a href="{{ content.field_website.0 }}" target="_blank"><i class="fa fa-globe"></i></a></div>
            {% endif %}
        </div>
    </div>
    <div class="col-md-12"><div class="description">{{ content.body }} </div>
  </div>
</div>